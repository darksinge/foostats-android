<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:text="Score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreLabel"
        android:layout_weight="0"
        android:typeface="monospace"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="Player Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blueP1NameLabel"
        android:padding="4dp"
        android:layout_weight="0"
        android:fontFamily="sans-serif"
        android:typeface="monospace"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:id="@+id/blue1AddButton"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@color/blueTeamColorPrimary"
            android:layout_margin="3dp"
            android:textSize="36sp" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:id="@+id/blue1SubButton"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@color/blueTeamColorPrimary"
            android:layout_margin="3dp"
            android:textSize="36sp" />


    </LinearLayout>

    <TextView
        android:text="Player Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blueP2NameLabel"
        android:layout_weight="0"
        android:fontFamily="sans-serif"
        android:typeface="monospace"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:id="@+id/blue2AddButton"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@color/blueTeamColorPrimary"
            android:layout_margin="3dp"
            android:textSize="36sp" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:id="@+id/blue2SubButton"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@color/blueTeamColorPrimary"
            android:layout_margin="3dp"
            android:textSize="36sp" />


    </LinearLayout>

    <TextView
        android:text="Player Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/redP1NameLabel"
        android:padding="4dp"
        android:layout_weight="0"
        android:fontFamily="sans-serif"
        android:typeface="monospace"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/red1AddButton"
            android:layout_weight="1"
            android:background="@color/redTeamColorPrimary"
            android:layout_margin="3dp"
            android:textSize="36sp" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/red1SubButton"
            android:layout_weight="1"
            android:background="@color/redTeamColorPrimary"
            android:layout_margin="3dp"
            android:textSize="36sp" />

    </LinearLayout>

    <TextView
        android:text="Player Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/redP2NameLabel"
        android:layout_weight="0"
        android:fontFamily="sans-serif"
        android:typeface="monospace"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/red2AddButton"
            android:layout_weight="1"
            android:background="@color/redTeamColorPrimary"
            android:layout_margin="3dp"
            android:textSize="36sp" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/red2SubButton"
            android:layout_weight="1"
            android:background="@color/redTeamColorPrimary"
            android:layout_margin="3dp"
            android:textSize="36sp" />
    </LinearLayout>
</LinearLayout>